<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->
  <servlet>
    <servlet-name>mediatorServlet</servlet-name>
    <servlet-class>botleecher.server.MediatorServiceImpl</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>eventServiceImpl</servlet-name>
        <servlet-class>de.novanic.eventservice.service.EventServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>botleecher.BotLeecherGwt EventMediatorService</servlet-name>
        <servlet-class>botleecher.server.EventMediatorServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>botleecher.BotLeecherGwt LoginService</servlet-name>
        <servlet-class>botleecher.server.LoginServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>mediatorServlet</servlet-name>
    <url-pattern>/botleecher/MediatorService</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eventServiceImpl</servlet-name>
        <url-pattern>/botleecher/gwteventservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>botleecher.BotLeecherGwt EventMediatorService</servlet-name>
        <url-pattern>/botleecher/EventMediatorService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>botleecher.BotLeecherGwt LoginService</servlet-name>
        <url-pattern>/botleecher/LoginService</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>botleecher.html</welcome-file>
  </welcome-file-list>

</web-app>
